{
  "name": "@elizaos/plugin-defillama",
  "description": "DeFiLlama plugin for ElizaOS - provides DeFi market data, analytics, and yield information",
  "version": "1.3.5",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageType": "plugin",
  "platform": "node",
  "license": "MIT",
  "author": "ElizaOS Contributors",
  "keywords": [
    "plugin",
    "elizaos",
    "defi",
    "defillama",
    "yield",
    "tvl",
    "analytics"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos/eliza"
  },
  "homepage": "https://elizaos.ai",
  "bugs": {
    "url": "https://github.com/elizaos/eliza/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/core": "^1.3.1",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:e2e": "elizaos test e2e",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist .turbo node_modules .turbo-tsconfig.json tsconfig.tsbuildinfo .eliza"
  },
  "publishConfig": {
    "access": "public"
  },
  "resolutions": {
    "zod": "3.24.2",
    "@langchain/core": "0.2.31"
  },
  "overrides": {
    "zod": "3.24.2",
    "@langchain/core": "0.2.31"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "DEFILLAMA_API_KEY": {
        "type": "string",
        "description": "API key for DeFiLlama (if required)",
        "required": false
      },
      "CACHE_TTL": {
        "type": "number",
        "description": "Default cache TTL in seconds",
        "default": 300
      },
      "RATE_LIMIT_PER_MINUTE": {
        "type": "number",
        "description": "API rate limit per minute",
        "default": 300
      }
    }
  }
}
